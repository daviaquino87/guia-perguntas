<%- include("partials/header.ejs")%>
<body>
  <%- include("partials/navbar.ejs")%>
  <div class="container">
    <hr />
    <h1><%= perguntar.titulo%></h1>
    <p><%= perguntar.descricao%></p>
    <hr />

    <form action="/responder" method="POST">
      <h3>Responda</h3>
      <br />
      <label for="">Resposta:</label>
      <textarea
        name="corpo"
        id=""
        cols="30"
        rows="10"
        placeholder="Digite sua resposta"
        class="form-control"
      ></textarea>
      <input type="hidden" name="perguntaid" value=" <%= perguntar.id%> " />
      <button class="btn btn-dark" type="submit">Responder</button>
    </form>
    <hr />
    <h3>Respostas</h3>
    <hr />
    <% respostas.forEach(resposta => {%> <br />
    <div class="card">
      <div class="card-body">
        <p><%= resposta.corpo%></p>
      </div>
    </div>

    <%})%>
  </div>
</body>
<%- include("partials/footer.ejs")%>
